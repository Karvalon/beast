# VaultMesh Git Configuration
# Generated by VaultMesh Dotfiles Management System

[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = vim
	autocrlf = input
	safecrlf = true
	preloadindex = true
	fscache = true

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	# Basic shortcuts
	s = status
	a = add
	c = commit
	p = push
	pl = pull
	b = branch
	co = checkout
	m = merge
	r = rebase
	
	# Advanced shortcuts
	aa = add --all
	cm = commit -m
	cam = commit -am
	acp = "!git add -A && git commit -m"
	
	# Logging
	l = log --oneline
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	
	# Diff shortcuts
	d = diff
	dc = diff --cached
	ds = diff --stat
	
	# Stash shortcuts
	sl = stash list
	sa = stash apply
	ss = stash save
	
	# Reset shortcuts
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	
	# Branch management
	bd = branch -d
	bD = branch -D
	ba = branch -a
	br = branch -r
	
	# Remote shortcuts
	rv = remote -v
	ra = remote add
	rr = remote rm
	
	# VaultMesh specific
	backup = !git add -A && git commit -m "Backup: $(date)"
	snapshot = !git add -A && git commit -m "Snapshot: $(date)" && git push
	sync = !git pull && git push
	
[credential]
	helper = store

[gitflow "branch"]
	master = main
	develop = develop

[gitflow "prefix"]
	feature = feature/
	release = release/
	hotfix = hotfix/
	support = support/
	versiontag = v

[github]
	user = YOUR_GITHUB_USERNAME

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[rerere]
	enabled = true

[help]
	autocorrect = 1

[tag]
	sort = version:refname

[versionsort]
	suffix = -